<Window x:Class="MultipleUIThreads.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Text="Thread's ID is "/>
            <TextBlock Text="{Binding ThreadId}"/>
        </StackPanel>
        <Button Content="Create New Window" Height="47" HorizontalAlignment="Left" Margin="179,50,0,0" Name="button1" VerticalAlignment="Top" Width="123" Click="button1_Click" />
    </StackPanel>
</Window>
